@page
@model CadastroBestProject.Pages.Cadastro.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>Novo Contato</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="cadastro.Nome" class="col-sm-2 col-form-label col-form-label-lg"></label>
                <div class="col-sm-10">
                    <input asp-for="cadastro.Nome" class="form-control" />
                </div>
                    <span asp-validation-for="cadastro.Nome" class="text-danger"></span>
             </div>
            <div class="form-group row">
                <label asp-for="cadastro.TelefoneResid" class="col-sm-2 col-form-label col-form-label-lg"></label>
                <div class="col-sm-10">
                <input asp-for="cadastro.TelefoneResid" class="form-control" />
                </div>
                <span asp-validation-for="cadastro.TelefoneResid" class="text-danger"></span>
                
            </div>
            <div class="form-group row">
                <label asp-for="cadastro.Celular" class="col-sm-2 col-form-label col-form-label-lg"></label>
                <div class="col-sm-10">
                <input asp-for="cadastro.Celular" class="form-control" />
                </div>
                <span asp-validation-for="cadastro.Celular" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <p class="text-center">
<input type="submit" value="Adicionar" class="btn btn-primary btn-lg" />
                    </p>
                </div>             
            </div>
        </form>
    </div>
</div>
<hr>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="cadastro.Nome"></label>
            </th>
            <th>
                <label asp-for="cadastro.TelefoneResid"></label>
            </th>
            <th>
                <label asp-for="cadastro.Celular"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Listacadastro) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneResid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @*   
                *<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                *<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                *@
            <form method="post">
        <input type="hidden" asp-for="cadastro.Id" />
        <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Deseja realmente EXCLUIR o registro ?')" class="btn btn-danger btn-lg">Excluir</button>
    </form>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}